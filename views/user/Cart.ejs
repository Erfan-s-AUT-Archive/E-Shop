<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>سبدخرید</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="css/slick.css">
    <link rel="stylesheet" type="text/css" href="css/slick-theme.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="css/myStyle.css">-->
    <link rel="stylesheet" href="css/myStyle2.css">
    <link rel="stylesheet" href="css/myStyle3.css">
    <link rel="stylesheet" href="css/Cart.css">
    <link rel="stylesheet" href="css/Dashboard.css">
    <style type="text/css">
        html, body {
            background-color: white;
            color: black;
        }

        * {
            box-sizing: border-box;
        }

        .slider {
            margin: auto;
            width: 75%;
        }

        .slick-slide img {
            width: 100%;
        }

        .dropPage {
            position: absolute;
            top: -200%;
            height: 100%;
            width: 100%;
            z-index: 3000;
            transition: 0.5s;
        }

    </style>
</head>
<body class="font-medium h-100" style="min-width: 1200px">
<% include ../partials/header.ejs %>

<aside id="sideBar" class="customLeftSide h-100 " style="background-color: white; z-index: 0 ">
    <div class="mt-5">
        <div class="card shadow">
            <div class="card-header bg-info text-white text-justify text-center">
                <h5 class="my-auto">قیمت</h5>
            </div>
            <div class="card-body">
                <div class="mt-2">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">مبلغ کالا:</h6>
                        <h6>500,000 تومان</h6>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">هزینه ارسال:</h6>
                        <h6>8,000 تومان</h6>
                    </div>
                </div>
                <div class="mt-3">
                    <div style="border-top: dotted black 4px">
                    </div>
                </div>
                <div class="mt-4">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">هزینه کل:</h6>
                        <h6>508,000 تومان</h6>
                    </div>
                </div>
            </div>
            <a href="/order" class="card-footer bg-success text-white text-justify text-center">
                <h5 class="my-auto">ایجاد سفارش</h5>
            </a>
        </div>
    </div>
</aside>

<div class="mt-4 pr-5">
    <main class="main">

        <div class="card shadow">
            <div class="card-header bg-info text-white text-justify text-center">
                <h2 class="my-auto">کالاها</h2>
            </div>
            <div class="card-body">
                <table class="table" style="">
                    <thead>
                    <tr>
                        <th>
                            <div>
                                رنگ
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                تعداد
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                قیمت
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                کالا
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                شماره
                            </div>
                        </th>

                        <th>

                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0; i < cart.length; i++) { %>
                        <tr>
                                <td class="">
                                    <div class="mt-3" style="">
                                        قرمز
                                    </div>
                                </td>
                                <td>
                                    <div class="mt-2 float-right" style="">
                                        <input dir="rtl" value="<%= cart[i].quantity %>" class="form-control" type="number" min="0"
                                               style="width: 90px">
                                    </div>
                                </td>
                                <td>
                                    <div class="mt-3 float-right" style="">
                                        <%= cart[i].productId.price %>
                                    </div>
                                </td>
                                <td dir="rtl">
                                    <div class="d-flex">
                                        <img src="Images/3.jpg" class="cartImage" style="">
                                        <div class="mt-3 mr-4">
                                            <strong class="float-right"><%= cart[i].productId.name %></strong>
                                        </div>
                                    </div>
                                </td>
                                <th scope="row">
                                    <div class="mt-3" style="">
                                        <div class="mt-3 float-right" style="margin-right: 35px">
                                            1
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <div class="mt-5">
                                        <a href="#" class="text-danger" style="font-size: 25px">
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </div>
                                </td>
                        </tr>
                    <% } %>
                    
                    </tbody>
                </table>
            </div>
        </div>

    </main>
</div>

<% include ../partials/footer.ejs %>

<script src="js/jquery2_2.min.js" type="text/javascript"></script>
<script src="js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>