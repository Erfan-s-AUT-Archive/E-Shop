<body class="font-medium h-100" style="min-width: 1200px">
<% include ../partials/header.ejs %>

<form method="post" action="/order">
<aside id="sideBar" class="customLeftSide h-100 " style="background-color: white; z-index: 0 ">
    <div class="mt-5">
        <div class="card shadow">
            <div class="card-header bg-info text-white text-justify text-center">
                <h5 class="my-auto">قیمت</h5>
            </div>
            <div class="card-body">
                <div class="mt-2">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">مبلغ کالا:</h6>
                        <h6>500,000 تومان</h6>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">هزینه ارسال:</h6>
                        <h6>8,000 تومان</h6>
                    </div>
                </div>
                <div class="mt-3">
                    <div style="border-top: dotted black 4px">
                    </div>
                </div>
                <div class="mt-4">
                    <div class="d-inline mt-5" style="direction: rtl">
                        <h6 class="float-right">هزینه کل:</h6>
                        <h6>508,000 تومان</h6>
                    </div>
                </div>
            </div>
            <a class="card-footer bg-success text-white text-justify text-center">
                <input type="submit" value="ثبت سفارش و پرداخت"
                style="background: none; border: none; color: white; font-size: 20px;">
            </a>
        </div>
    </div>
</aside>


<div class="modal fade" id="ChangeAddress" tabindex="-1" role="dialog" aria-labelledby="ChangeAddress"
    aria-hidden="true">
    
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-inline">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title float-right" id="">اضافه کردن آدرس</h5>

            </div>
            <div dir="rtl" class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <input class="form-control mt-3" type="text" placeholder="استان">
                    </div>
                    <div class="col-6">
                        <input class="form-control mt-3" type="text" placeholder="شهر">
                    </div>
                </div>
                <input class="form-control mt-3" type="number" placeholder="کدپستی">
                <input class="form-control mt-3" type="text" placeholder="آدرس">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-success text-white">ذخیره</button>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 pr-5">
    <main class="main">
        
        <div class="card shadow mb-5">
            <div class="card-body detailSCards" style="">
                <div class="position-absolute" style="left: 55px; top: 27px">
                    <button type="button" class="btn btn btn-outline-info" data-toggle="modal"
                            data-target="#ChangeAddress">اضافه کردن آدرس
                    </button>
                </div>
                <div class="position-absolute"
                     style="font-size: 40px;color:#b7e8d5; right: -17px;top: 27%;background-color: transparent">
                    <i class="fa fa-check-circle"></i>
                </div>
                <div class="position-absolute"
                     style="font-size: 40px;color:white; right: -17px;top: 27%;background-color: transparent;z-index: -1">
                    <i class="fa fa-circle"></i>
                </div>
                <div class="d-flex mr-5 mt-2 mb-2">
                    <div style="direction: rtl">
                        <select name="address" type="" class="form-control">
                            <option class="" value="تهران - تهران - یوسف آباد - دست چپ - پلاک 16 - واحد 20">
                                تهران - تهران - یوسف آباد - دست چپ - پلاک 16 - واحد 20
                            </option>
                            <option class="" value="تهران - تهران - میدان ولیعصر - اونور خیابان - پلاک 2 - واحد 15">
                                تهران - تهران - میدان ولیعصر - اونور خیابان - پلاک 2 - واحد 15
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-5" style="">
            <div class="card-body detailSCards">
                <div class="d-flex mr-3">  
                    <strong class="mt-2">نام :</strong>
                    <input name="firstname" class="form-control mr-3 " type="text" style="width: 20%" placeholder="">
                    <strong class="mt-2 mr-4"> نام خانوادگی :</strong>
                    <input name="lastname" class="form-control mr-3 " type="text" style="width: 20%" placeholder="">
                    <strong class="mt-2 mr-4">کدملی :</strong>
                    <input name="nationalId" class="form-control mr-3" type="number" style="width: 20%" placeholder="">
                </div>
                <div class="position-absolute"
                     style="font-size: 40px;color:#b7e8d5; right: -17px;top: 32%;background-color: transparent">
                    <i class="fa fa-check-circle"></i>
                </div>
                <div class="position-absolute"
                     style="font-size: 40px;color:white; right: -17px;top: 32%;background-color: transparent;z-index: -1">
                    <i class="fa fa-circle"></i>
                </div>
                <div class="d-flex mr-3 mt-3">
                    <strong class=" mt-2">شماره منزل:</strong>
                    <input name="homeNumber" class="form-control mr-3 " type="text" style="width: 20%" placeholder="">
                    <strong class="mt-2 mr-4">تلفن همراه :</strong>
                    <input name="phoneNumber" class="form-control mr-3 " type="number" style="width: 20%" placeholder="">
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-info text-white text-justify text-center">
                <h2 class="my-auto">کالاها</h2>
            </div>
            <div class="card-body">
                <table class="table" style="">
                    <thead>
                    <tr>
                        <th>
                            <div>
                                رنگ
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                تعداد
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                قیمت
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                کالا
                            </div>
                        </th>
                        <th>
                            <div class="float-right  pr-4">
                                شماره
                            </div>
                        </th>

                        <th>

                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="">
                            <div class="mt-3" style="">
                                قرمز
                            </div>
                        </td>
                        <td>
                            <div class="mt-2 float-right" style="">
                                <input dir="rtl" value="1" class="form-control" type="number" min="0"
                                       style="width: 90px">
                            </div>
                        </td>
                        <td>
                            <div class="mt-3 float-right" style="">
                                150,000 تومان
                            </div>
                        </td>
                        <td dir="rtl">
                            <div class="d-flex">
                                <img src="Images/3.jpg" class="cartImage" style="">
                                <div class="mt-3 mr-4">
                                    <strong class="float-right">تیشرت خفن</strong>
                                    <br>
                                    <p style="direction: rtl">
                                        تیشرت خیلی خوشگل ناناز
                                    </p>
                                </div>
                            </div>
                        </td>
                        <th scope="row">
                            <div class="mt-3" style="">
                                <div class="mt-3 float-right" style="margin-right: 35px">
                                    1
                                </div>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <td class="">
                            <div class="mt-3" style="">
                                سفید
                            </div>
                        </td>
                        <td>
                            <div class="mt-2 float-right" style="">
                                <input dir="rtl" value="1" class="form-control" min="0" type="number"
                                       style="width: 90px">
                            </div>
                        </td>
                        <td>
                            <div class="mt-3 float-right" style="">
                                150,000 تومان
                            </div>
                        </td>
                        <td dir="rtl">
                            <div class="d-flex">
                                <img src="Images/6.jpg" class="cartImage" style="">
                                <div class="mt-3 mr-4">
                                    <strong class="float-right">تیشرت</strong>
                                    <br>
                                    <p style="direction: rtl">
                                        تیشرت طرح اردک تولید ملی
                                    </p>
                                </div>
                            </div>
                        </td>
                        <th scope="row">
                            <div class="mt-3 float-right" style="margin-right: 35px">
                                2
                            </div>
                        </th>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div dir="rtl">
            <div class="card mb-5 mt-5" style="width: 74.2%">
                <div class="card-body detailSCards">
                    <div class="d-flex mr-3">
                        <strong class="mt-2">روش ارسال :</strong>
                    </div>
                    <div class="position-absolute"
                         style="font-size: 40px;color:#b7e8d5; right: -17px;top: 32%;background-color: transparent">
                        <i class="fa fa-check-circle"></i>
                    </div>
                    <div class="position-absolute"
                         style="font-size: 40px;color:white; right: -17px;top: 32%;background-color: transparent;z-index: -1">
                        <i class="fa fa-circle"></i>
                    </div>
                    
                    <div class="mt-3 d-flex">
                        <label class="cartCustomRadioContainer">
                            <input type="radio" value="پست پیشتاز" checked="checked" name="shippingMethod">
                            <span class="cartCustomCheckMark"></span>
                        </label>
                        <strong class="mt-1 mr-3">پست پیشتاز</strong>
                    </div>
                    <div class="mt-3 d-flex">
                        <label class="cartCustomRadioContainer">
                            <input type="radio" value="پست سفارشی" name="shippingMethod">
                            <span class="cartCustomCheckMark"></span>
                        </label>
                        <strong class="mt-1 mr-3">پست سفارشی</strong>
                    </div>
                </div>
            </div>
        </div>

        <div dir="rtl">
            <div class="card mb-5 mt-5" style="width: 74.2%">
                <div class="card-body detailSCards">
                    <div class="d-flex mr-3">
                        <strong class="mt-2">روش پرداخت :</strong>
                    </div>
                    <div class="position-absolute"
                         style="font-size: 40px;color:#b7e8d5; right: -17px;top: 32%;background-color: transparent">
                        <i class="fa fa-check-circle"></i>
                    </div>
                    <div class="position-absolute"
                         style="font-size: 40px;color:white; right: -17px;top: 32%;background-color: transparent;z-index: -1">
                        <i class="fa fa-circle"></i>
                    </div>
                    <div class="mt-3 d-flex">
                        <label class="cartCustomRadioContainer">
                            <input type="radio" value="بانک سامان" checked="checked" name="paymentMethod">
                            <span class="cartCustomCheckMark"></span>
                        </label>
                        <strong class="mt-1 mr-3">بانک سامان</strong>
                    </div>
                    <div class="mt-3 d-flex">
                        <label class="cartCustomRadioContainer">
                            <input type="radio" value="پرداخت در محل" name="paymentMethod">
                            <span class="cartCustomCheckMark"></span>
                        </label>
                        <strong class="mt-1 mr-3">پرداخت در محل</strong>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
</form>
