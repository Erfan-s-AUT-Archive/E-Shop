    <style type="text/css">
        html, body {
            background-color: white;
            color: black;
        }

        * {
            box-sizing: border-box;
        }

        .slider {
            margin: auto;
            width: 75%;
        }

        .slick-slide img {
            width: 100%;
        }

        .dropPage {
            position: absolute;
            top: -200%;
            height: 100%;
            width: 100%;
            z-index: 3000;
            transition: 0.5s;
        }

    </style>
